<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/star"
    android:layout_height="match_parent"
    tools:context=".Fake.FakePhone">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="387dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/start"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="69dp"

            fancy:fb_focusColor="#313131"
            fancy:fb_iconPaddingLeft="0dp"
            fancy:fb_iconPaddingRight="0dp"
            android:background="@drawable/stop_calling"
            fancy:fb_radius="64dp"></mehdi.sakout.fancybuttons.FancyButton>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="69dp"
            android:layout_marginRight="10dp"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconPaddingLeft="0dp"
            fancy:fb_iconPaddingRight="0dp"
            android:background="@drawable/calling"
            fancy:fb_radius="64dp"></mehdi.sakout.fancybuttons.FancyButton>


    </RelativeLayout>

</RelativeLayout>